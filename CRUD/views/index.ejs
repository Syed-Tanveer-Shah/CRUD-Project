<%- include ('./partials/header.ejs')%>
      
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-cetnter">Add New Student</h2>
            <form method="post">
                <div class="mb-3">                  
                    <label for="name"class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                    </div>  
                    <div class="mb-3">
                        <label for="age"class="form-label">Age</label>
                        <input type="number" class="form-control" id="age" name="age" required>
                        </div>
                        <div class="mb-3">                   
                            <label for="fees"class="form-label">Fees</label>
                            <input type="number" class="form-control" id="fees" name="fees" required>
                            </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="col-sm-6 mt-5">
            <h2 class=" alert alert-danger text-center">List Of Students</h2>
            
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Age</th>            
              <th scope="col">Fees</th>             
              <th scope="col">Action</th>       
               </tr>        
</thead>     
<tbody>  
    <% var i=1%>
    <% data.forEach((item)=>{ %>

     <tr>            
        <td><%= i++%></td>  
        <td><%= item.name%></td> 
        <td><%= item.age%></td>
        <td><%= item.fees%></td>
<td>
    <form action="/student/edit/<%= item._id%>" method="get" class="d-inline">

        <button type="submit" class="btn btn-primary ">Edit</button>    
    </form>

    <form action="/student/delete/<%= item._id%>" method="post" class="d-inline">
   
        <button type="button" class="btn btn-danger">Delete</button> 
    </form>
             
               
</td>        
 </tr>
<% })%>      
         
                                     </tbody>      
                                 </table>      
                            </div>   
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


<%- include ('./partials/footer.ejs')%>


   